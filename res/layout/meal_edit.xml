<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"       
        android:listSelector="@drawable/list_selector"
        android:background="@color/list_background"/>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="${relativePackage}.${activityClass}" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusableInTouchMode="true"> 

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:focusableInTouchMode="true">


        <!--LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:focusableInTouchMode="true"-->

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    			xmlns:tools="http://schemas.android.com/tools"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/dateLayout"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:text="Date" />
                        

            <TextView
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="16.0sp"/>


        	</LinearLayout>


 			<Button
        		android:id="@+id/lblSaveMeal"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentRight="true"
        		android:text="Save"
        		android:onClick="onSaveMealButtonClick">
 			</Button>            
        
        <!--/LinearLayout-->
        </RelativeLayout>
<!--
            <View
                android:id="@+id/seperator0"
                android:layout_width="fill_parent"
                android:layout_height="1dip" />
-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/breakfastLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
			    
            <TextView
                android:id="@+id/lblBreakfast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:layout_marginTop="10dp"
                android:text="Breakfast  " />

			<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/search_breakfast_icon"
	    		android:layout_width="30dp"
	    		android:layout_height="30dp"
	    		android:layout_marginTop="10dp"
				android:src="@drawable/search_icon_small2"
			/> 
			    			    
            </LinearLayout>


            <EditText
                android:id="@+id/Breakfast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="16.0sp"/>



    		<SearchView
        		android:id="@+id/searchView"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true" 
        		android:visibility="gone">
    		</SearchView>


		<ListView android:id="@+id/listView1" android:layout_width="fill_parent"
  			android:layout_height="wrap_content" android:visibility="gone"/>        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

 			<Button
        		android:id="@+id/lblAdd"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Add"
        		android:onClick="onAddButtonClick"
        		android:visibility="gone">
 			</Button>            

 			<Button
        		android:id="@+id/lblClear"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Clear"
        		android:onClick="onClearButtonClick"
        		android:visibility="gone">
 			</Button>            


            </LinearLayout>
            
            </LinearLayout>            
<!--
            <View
                android:id="@+id/seperator"
                android:layout_width="fill_parent"
                android:layout_height="1dip" />
-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/lunchLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
			    
            <TextView
                android:id="@+id/lblLunch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:layout_marginTop="10dp"
                android:text="Lunch  " />

			<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/search_lunch_icon"
	    		android:layout_width="30dp"
	    		android:layout_height="30dp"
	    		android:layout_marginTop="10dp"
				android:src="@drawable/search_icon_small2"
			/> 
            
            </LinearLayout>


            <EditText
                android:id="@+id/Lunch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="16.0sp"/>

    <SearchView
        android:id="@+id/searchViewLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:visibility="gone">
    </SearchView>

		<ListView android:id="@+id/listView1Lunch" android:layout_width="fill_parent"
  			android:layout_height="wrap_content" android:visibility="gone"/>        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >


 			<Button
        		android:id="@+id/lblAddLunch"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Add"
        		android:onClick="onAddLunchButtonClick"
        		android:visibility="gone">
 			</Button>            

 			<Button
        		android:id="@+id/lblClearLunch"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Clear"
        		android:onClick="onClearLunchButtonClick"
        		android:visibility="gone">
 			</Button>            

        </LinearLayout>
        
        </LinearLayout>        
<!--
            <View
                android:id="@+id/seperator1"
                android:layout_width="fill_parent"
                android:layout_height="1dip" />
-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/snacksLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            

            <TextView
                android:id="@+id/lblSnacks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:layout_marginTop="10dp"
                android:text="Snacks  " />

			<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/search_snacks_icon"
	    		android:layout_width="30dp"
	    		android:layout_height="30dp"	
	    		android:layout_marginTop="10dp"			
				android:src="@drawable/search_icon_small2"
			/> 
			    			    
            </LinearLayout>
            
            <EditText
                android:id="@+id/Snacks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="16.0sp"/>


    <SearchView
        android:id="@+id/searchViewSnacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:visibility="gone">
    </SearchView>

		<ListView android:id="@+id/listView1Snacks" android:layout_width="fill_parent"
  			android:layout_height="wrap_content" android:visibility="gone"/>        


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

 			<Button
        		android:id="@+id/lblAddSnacks"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Add"
        		android:onClick="onAddSnacksButtonClick"
        		android:visibility="gone">
 			</Button>            


 			<Button
        		android:id="@+id/lblClearSnacks"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Clear"
        		android:onClick="onClearSnacksButtonClick"
        		android:visibility="gone">
 			</Button>            

        </LinearLayout>

        </LinearLayout>
        
<!--
            <View
                android:id="@+id/seperator5"
                android:layout_width="fill_parent"
                android:layout_height="1dip"/>
-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/dinnerLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/lblDinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:layout_marginTop="10dp"
                android:text="Dinner  " />

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/search_dinner_icon"
	    		android:layout_width="30dp"
	    		android:layout_height="30dp"	
	    		android:layout_marginTop="10dp"			
				android:src="@drawable/search_icon_small2"
			/> 
			    			    
            </LinearLayout>
            
            <EditText
                android:id="@+id/Dinner"
                android:layout_width="fill_parent"
                android:inputType="textCapWords|textMultiLine"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"/>

    <SearchView
        android:id="@+id/searchViewDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:visibility="gone">
    </SearchView>

		<ListView android:id="@+id/listView1Dinner" android:layout_width="fill_parent"
  			android:layout_height="wrap_content" android:visibility="gone"/>        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >


 			<Button
        		android:id="@+id/lblAddDinner"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Add"
        		android:onClick="onAddDinnerButtonClick"
        		android:visibility="gone">
 			</Button>            


 			<Button
        		android:id="@+id/lblClearDinner"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Clear"
        		android:onClick="onClearDinnerButtonClick"
        		android:visibility="gone">
 			</Button>            

        </LinearLayout>
            </LinearLayout>        
<!--
            <View
                android:id="@+id/seperator6"
                android:layout_width="fill_parent"
                android:layout_height="1dip" />
-->
            
 			<Button
        		android:id="@+id/lblSaveMeal"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentRight="true"
        		android:text="Save"
        		android:onClick="onSaveMealButtonClick">
 			</Button>            

 			</LinearLayout>
  
  </ScrollView>      

</RelativeLayout>

    
</android.support.v4.widget.DrawerLayout>
  
  